<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>AdminPassFilter</filter-name>
        <filter-class>com.BookingTaxi.AdminPassFilter</filter-class>
    </filter>
    <filter>
        <filter-name>UserLogFilter</filter-name>
        <filter-class>com.BookingTaxi.UserLogFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>UserLogFilter</filter-name>
        <url-pattern>/customerActions.jsp</url-pattern>
        <url-pattern>/BookTaxies.jsp</url-pattern>
        <url-pattern>/UserDetails.jsp</url-pattern>
        <url-pattern>/OrdersSuccess.jsp</url-pattern>
    </filter-mapping>
    
    <filter-mapping>
        <filter-name>AdminPassFilter</filter-name>
        <url-pattern>/ShowUser.jsp</url-pattern>
        <url-pattern>/ShowTaxi.jsp</url-pattern>
        <url-pattern>/Admin_Flow.jsp</url-pattern>
    </filter-mapping>
    
    <servlet>
        <servlet-name>AddCustomer</servlet-name>
        <servlet-class>com.BookingTaxi.AddCustomerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BookTaxi</servlet-name>
        <servlet-class>com.BookingTaxi.CheckBookTaxiServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>checkLog</servlet-name>
        <servlet-class>com.BookingTaxi.CheckCutomerLoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminPassServlet</servlet-name>
        <servlet-class>com.BookingTaxi.AdminPassServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.BookingTaxi.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RestTaxiServlet</servlet-name>
        <servlet-class>com.BookingTaxi.RestTaxiServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookTaxi</servlet-name>
        <url-pattern>/checkBook</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddCustomer</servlet-name>
        <url-pattern>/addcustomer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>checkLog</servlet-name>
        <url-pattern>/checkLog</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminPassServlet</servlet-name>
        <url-pattern>/AdminPassServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RestTaxiServlet</servlet-name>
        <url-pattern>/RestTaxiServlet</url-pattern>
    </servlet-mapping>
</web-app>
